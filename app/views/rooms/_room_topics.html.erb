<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Topics

    <a data-toggle="collapse" href="#room_topics_new_form">
      Add topic
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @room.topics.each do |topic| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to topic, topic_path(topic) %>

        <%= link_to topic, method: :delete, data: { confirm: "Do you really want to delete this topic" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="room_topics_new_form">
        <%= render partial: "rooms/room_topics_new_form" %>
      </div>
    </div>

  </ul>
</div>
