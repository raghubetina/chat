<% was_validated = message.errors.any? %>

<%= form_with(model: message, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for topic_id start -->
  <div class="form-group">
    <% topic_class = "form-control" %>
    <% topic_was_invalid = message.errors.include?(:topic) %>

    <% if was_validated %>
      <% if topic_was_invalid %>
        <% topic_class << " is-invalid" %>
      <% else %>
        <% topic_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :topic_id %>
    <!-- Input for topic_id start -->
    <%= f.number_field :topic_id, class: topic_class, placeholder: "Enter topic" %>
    <!-- Input for topic_id end -->
    <% if topic_was_invalid %>
      <% message.errors.full_messages_for(:topic).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for topic_id end -->
  <!-- Label and input for body start -->
  <div class="form-group">
    <% body_class = "form-control" %>
    <% body_was_invalid = message.errors.include?(:body) %>

    <% if was_validated %>
      <% if body_was_invalid %>
        <% body_class << " is-invalid" %>
      <% else %>
        <% body_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :body %>
    <!-- Input for body start -->
    <%= f.text_area :body, class: body_class, placeholder: "Enter body" %>
    <!-- Input for body end -->
    <% if body_was_invalid %>
      <% message.errors.full_messages_for(:body).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for body end -->
  <!-- Label and input for user_id start -->
  <div class="form-group">
    <% user_class = "form-control" %>
    <% user_was_invalid = message.errors.include?(:user) %>

    <% if was_validated %>
      <% if user_was_invalid %>
        <% user_class << " is-invalid" %>
      <% else %>
        <% user_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :user_id %>
    <!-- Input for user_id start -->
    <%= f.number_field :user_id, class: user_class, placeholder: "Enter user" %>
    <!-- Input for user_id end -->
    <% if user_was_invalid %>
      <% message.errors.full_messages_for(:user).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for user_id end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
